<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  <android.support.v7.widget.CardView android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      app:cardElevation="@dimen/cardview_default_elevation"
      app:cardCornerRadius="8dp">
    <LinearLayout android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
      <com.facebook.drawee.view.SimpleDraweeView android:id="@+id/img_sponsor"
          android:layout_width="match_parent" android:layout_height="wrap_content"
          android:minHeight="@dimen/sponsor_logo_height"
          android:layout_gravity="center_horizontal"/>
      <View android:layout_width="match_parent" android:layout_height="@dimen/divider_height"
          android:background="@color/dividerGrey"/>
      <TextView android:id="@+id/txt_sponsor_slogan"
          android:layout_width="match_parent" android:layout_height="wrap_content"
          android:gravity="center_horizontal"
          android:textColor="@color/textDark" android:textSize="@dimen/text_size_18"
          android:layout_marginBottom="@dimen/margin_30" android:layout_marginTop="@dimen/margin_20"
          android:layout_marginLeft="@dimen/margin_20" android:layout_marginRight="@dimen/margin_20"
          tools:text="理财？如何理？选择哪个平台？不妨去懒投资看看"/>
      <View android:layout_width="match_parent" android:layout_height="@dimen/divider_height"
          android:background="@color/dividerGrey"/>
      <LinearLayout android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">
        <ImageView android:id="@+id/img_back"
            android:layout_width="0dp" android:layout_height="@dimen/height_60"
            android:layout_weight="1" android:foreground="?attr/selectableItemBackground"
            android:src="@drawable/ic_close_blue" android:layout_gravity="center_horizontal"
            android:scaleType="centerInside"/>
        <View android:layout_width="@dimen/divider_height"
            android:layout_height="match_parent"
            android:background="@color/dividerGrey"/>
        <ImageView android:id="@+id/img_go"
            android:layout_width="0dp" android:layout_height="@dimen/height_60"
            android:layout_weight="1" android:foreground="?attr/selectableItemBackground"
            android:src="@drawable/ic_go_blue" android:layout_gravity="center_horizontal"
            android:scaleType="centerInside"/>
      </LinearLayout>
    </LinearLayout>
  </android.support.v7.widget.CardView>

</LinearLayout>

