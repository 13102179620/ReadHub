<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_view"
    android:layout_width="match_parent" android:layout_height="match_parent">
  <LinearLayout
      android:layout_width="match_parent" android:layout_height="wrap_content"
      android:orientation="vertical" android:background="@color/background_grey">

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="horizontal" android:background="@android:color/white"
        android:layout_marginTop="@dimen/margin_30">
      <ImageView android:layout_width="@dimen/avatar_size"
          android:layout_height="@dimen/avatar_size"
          android:src="@drawable/ic_avatar" android:layout_margin="@dimen/margin_20"/>
      <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
          android:layout_gravity="center_vertical" android:text="@string/app_author"
          android:textSize="@dimen/text_size_16" android:textColor="@color/textGrey"/>
    </LinearLayout>

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20" android:padding="@dimen/padding_20"
        android:background="@android:color/white" android:text="@string/declare"
        android:textColor="@color/textGrey" android:textSize="@dimen/text_size_16"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20" android:layout_marginLeft="@dimen/margin_20"
        android:text="@string/sponsor"
        android:textColor="@color/textGrey" android:textSize="@dimen/text_size_14"/>

    <android.support.v7.widget.RecyclerView android:id="@+id/recycler_view_sponsors"
        android:layout_width="wrap_content" android:layout_height="match_parent"
        android:background="@color/background_grey" android:layout_gravity="center_horizontal"/>

  </LinearLayout>
</android.support.v4.widget.NestedScrollView>